<% if (user) { %>
  <%- include('../partials/navbar', user); %>
<% } else { %>
  <%- include('../partials/navbar'); %>
<% } %>

<div class="container mx-auto p-6">
  <!-- Profile card -->
  <div class="card w-full max-w-3xl mx-auto bg-base-100 flex flex-col gap-6">
    <div class="card-body shadow-xl border rounded-md border-primary">
      <h2 class="card-title text-center underline pb-2">User Profile</h2>

      <!-- Editable Profile Information -->
      <form method="post" action="/profile/update" class="space-y-4">
        <div class="space-y-2">
          <label class="font-medium text-lg" for="fullName">Full Name</label>
          <input name="fullName" id="fullName" type="text" class="input input-bordered w-full"
            value="<%= user.fullName %>" />
        </div>
        <div class="space-y-2">
          <label class="font-medium text-lg" for="userName">Username</label>
          <input name="userName" id="userName" type="text" class="input input-bordered w-full"
            value="<%= user.userName %>" />
        </div>
        <div class="space-y-2">
          <label class="font-medium text-lg" for="email">Email</label>
          <input name="email" id="email" type="email" class="input input-bordered w-full"
            value="<%= user.email %>" />
        </div>
        <div class="space-y-2">
          <label class="font-medium text-lg" for="role">Role</label>
          <input name="role" id="role" type="text" class="input input-bordered w-full"
            value="<%= user.role %>" />
        </div>

        <div class="flex justify-center gap-4 mt-6">
          <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
      </form>
    </div>
    <!-- Password Change Form -->
    <div class="card-body shadow-xl border rounded-md border-primary">
      <h3 class="font-medium text-xl underline pb-2">Change Password</h3>
      <form method="POST" action="/profile/change-password" class="space-y-4">
        <div class="space-y-2">
          <label class="font-medium text-lg" for="currentPassword">Current Password</label>
          <input name="currentPassword" id="currentPassword" type="password"
            class="input input-bordered w-full" required />
        </div>
        <div class="space-y-2">
          <label class="font-medium text-lg" for="newPassword">New Password</label>
          <input name="newPassword" id="newPassword" type="password" class="input input-bordered w-full"
            required />
        </div>
        <div class="space-y-2">
          <label class="font-medium text-lg" for="confirmPassword">Confirm New Password</label>
          <input name="confirmPassword" id="confirmPassword" type="password"
            class="input input-bordered w-full" required />
        </div>
        <div class="flex justify-center gap-4 mt-6">
          <button type="submit" class="btn btn-success">Update Password</button>
        </div>
      </form>
    </div>
  </div>
</div>