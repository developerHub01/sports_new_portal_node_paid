<%- include("../partials/dashboard-wrapper-top") %>
  <div class="w-full h-full flex flex-col gap-3">
    <h1 class="text-4xl text-center font-bold text-white p-2">Users (<%= users.length %>)</h1>
    <div class="overflow-x-auto h-full">
      <table class="table table-md md:table-lg table-pin-rows table-pin-cols h-auto max-h-full">
        <thead class="text-white text-base shadow-lg border-b capitalize">
          <tr>
            <th></th>
            <td>Full name</td>
            <td>username</td>
            <td>email</td>
            <td>role</td>
          </tr>
        </thead>
        <tbody class="text-sm">
          <% users.forEach(function({_id: id, fullName, userName, email, role}, index){ %>
            <tr>
              <th>
                <%= index+1 %>
              </th>
              <td class="capitalize">
                <%= fullName %>
              </td>
              <td>
                <%= userName %>
              </td>
              <td>
                <%= email %>
              </td>
              <td>
                <%= role %>
              </td>
            </tr>
            <% }); %>
        </tbody>
      </table>
    </div>
  </div>
  <%- include("../partials/dashboard-wrapper-bottom") %>