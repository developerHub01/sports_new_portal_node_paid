<div class="hero min-h-[70vh]" style="background-image: url('<%= banner %>');">
  <div class="hero-overlay bg-opacity-60"></div>
  <div class="hero-content text-neutral-content text-center">
    <div class="max-w-md text-white flex flex-col gap-4">
      <h1 class="text-3xl sm:text-5xl font-bold">
        <%= title %>
      </h1>
      <div>
        <a href="/category/<%= categoryName.toLowerCase() %>" class="btn btn-primary btn-sm capitalize">
          <%= categoryName %>
        </a>
      </div>
      <div class="flex justify-center items-center gap-5 flex-wrap">
        <p>created at: <%= createdAt %>
        </p>
        <p>updated at: <%= updatedAt %>
        </p>
      </div>
    </div>
  </div>
</div>